{
    "name": "tekord/php-option",
    "description": "Option object for PHP inspired by the Rust programming language",
    "keywords": [
        "php",
        "option",
        "optional",
        "null",
        "nullable",
        "data structures",
        "error handling"
    ],
    "homepage": "https://github.com/tekord/php-option",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Cyrill Tekord",
            "email": "cyrill@tekord.space",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Tekord\\Option\\": "src"
        },
        "files": [
            "src/stubs.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tekord\\Option\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
